{
  "manifest_version": 3,
  "name": "Adobe Web Usage Sensor (SubTracker)",
  "version": "3.0.0",
  "description": "Tracks Adobe web application usage and reports to your SubTracker account for license optimization.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.adobe.com/*",
    "*://*.acrobat.adobe.com/*",
    "*://*.express.adobe.com/*",
    "*://*.adminconsole.adobe.com/*",
    "*://*.spark.adobe.com/*",
    "*://*.creative.adobe.com/*",
    "http://localhost/*",
    "https://*.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Adobe Web Usage Sensor - Click to Configure"
  },
  "options_page": "options.html",
  "icons": {
    "128": "icon128.png"
  }
}
