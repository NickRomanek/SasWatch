    <script>
        async function toggleActivity(accountId) {
            const activitySection = document.getElementById(`activity-${accountId}`);
            const activityList = document.getElementById(`activity-list-${accountId}`);
            const isExpanded = activitySection.classList.contains('expanded');

            if (isExpanded) {
                activitySection.classList.remove('expanded');
            } else {
                activitySection.classList.add('expanded');
                
                // Load activity if not already loaded
                if (activityList.innerHTML.includes('Loading activity')) {
                    try {
                        const response = await fetch(`/api/admin/accounts/${accountId}/activity`);
                        const data = await response.json();

                        if (data.success) {
                            let html = '';
                            
                            if (data.activity.recentSignIns.length > 0) {
                                html += '<h4 style="margin: 16px 0 8px 0; color: var(--text-primary);">Recent Sign-Ins</h4>';
                                data.activity.recentSignIns.forEach(signIn => {
                                    html += `
                                        <div class="activity-item">
                                            <strong>${signIn.userDisplayName || signIn.userPrincipalName || 'Unknown'}</strong> - ${signIn.appDisplayName || 'Unknown App'}
                                            ${signIn.ipAddress ? `<br>IP: ${signIn.ipAddress}` : ''}
                                            ${signIn.riskState ? `<br>Risk: ${signIn.riskState}` : ''}
                                            <div class="activity-item-time">${new Date(signIn.createdDateTime).toLocaleString()}</div>
                                        </div>
                                    `;
                                });
                            }

                            if (data.activity.recentEvents.length > 0) {
                                html += '<h4 style="margin: 16px 0 8px 0; color: var(--text-primary);">Recent Events</h4>';
                                data.activity.recentEvents.forEach(event => {
                                    html += `
                                        <div class="activity-item">
                                            <strong>${event.event}</strong> - ${event.url || 'N/A'}
                                            <div class="activity-item-time">${new Date(event.when).toLocaleString()}</div>
                                        </div>
                                    `;
                                });
                            }

                            if (html === '') {
                                html = '<div class="empty-state" style="padding: 20px;"><p>No recent activity</p></div>';
                            }

                            activityList.innerHTML = html;
                        } else {
                            activityList.innerHTML = '<div class="empty-state" style="padding: 20px;"><p>Failed to load activity</p></div>';
                        }
                    } catch (error) {
                        console.error('Failed to load activity:', error);
                        activityList.innerHTML = '<div class="empty-state" style="padding: 20px;"><p>Error loading activity</p></div>';
                    }
                }
            }
        }

        async function toggleAccountActive(accountId, currentStatus) {
            if (!confirm(`Are you sure you want to ${currentStatus ? 'disable' : 'enable'} this account?`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/accounts/${accountId}/toggle-active`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        isActive: !currentStatus
                    })
                });

                const data = await response.json();

                if (data.success) {
                    if (typeof Toast !== 'undefined') {
                        Toast.success(data.message);
                    } else {
                        alert(data.message);
                    }
                    // Reload page to reflect changes
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    throw new Error(data.error || 'Failed to update account');
                }
            } catch (error) {
                console.error('Toggle account error:', error);
                if (typeof Toast !== 'undefined') {
                    Toast.error('Failed to update account: ' + error.message);
                } else {
                    alert('Failed to update account: ' + error.message);
                }
            }
        }

        async function togglePlatformAdmin(accountId, currentStatus) {
            const action = currentStatus ? 'revoke platform admin from' : 'grant platform admin to';
            if (!confirm(`Are you sure you want to ${action} this account?\n\nPlatform admins can manage all accounts on the platform.`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/accounts/${accountId}/toggle-platform-admin`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        platformAdmin: !currentStatus
                    })
                });

                const data = await response.json();

                if (data.success) {
                    if (typeof Toast !== 'undefined') {
                        Toast.success(data.message);
                    } else {
                        alert(data.message);
                    }
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    throw new Error(data.error || 'Failed to update platform admin status');
                }
            } catch (error) {
                console.error('Toggle platform admin error:', error);
                if (typeof Toast !== 'undefined') {
                    Toast.error('Failed to update: ' + error.message);
                } else {
                    alert('Failed to update: ' + error.message);
                }
            }
        }

        // --- Edit modal ---
        let editModal;
        let editAccountId = null;
        function openEditModal(accountId, accountName, isActive, isPlatformAdmin) {
            editAccountId = accountId;
            const accountNameEl = document.getElementById('edit-account-name');
            if (accountNameEl) {
                accountNameEl.textContent = accountName;
            }
            document.getElementById('edit-active').checked = !!isActive;
            document.getElementById('edit-platform-admin').checked = !!isPlatformAdmin;
            editModal = document.getElementById('editModal');
            if (editModal) {
                editModal.classList.add('active');
            }
        }
        function closeEditModal() {
            if (editModal) editModal.classList.remove('active');
            editAccountId = null;
        }

        // Close modal when clicking outside
        document.addEventListener('DOMContentLoaded', () => {
            const editModalElement = document.getElementById('editModal');
            if (editModalElement) {
                editModalElement.addEventListener('click', (e) => {
                    if (e.target === editModalElement) {
                        closeEditModal();
                    }
                });
            }
        });
        async function saveAccountChanges() {
            if (!editAccountId) return;
            const isActive = document.getElementById('edit-active').checked;
            const platformAdmin = document.getElementById('edit-platform-admin').checked;
            try {
                const response = await fetch(`/admin/accounts/${editAccountId}/update`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ isActive, platformAdmin })
                });
                const data = await response.json();
                if (data.success) {
                    if (typeof Toast !== 'undefined') {
                        Toast.success('Account updated');
                    } else {
                        alert('Account updated');
                    }
                    setTimeout(() => window.location.reload(), 500);
                } else {
                    throw new Error(data.error || 'Failed to update account');
                }
            } catch (error) {
                if (typeof Toast !== 'undefined') {
                    Toast.error(error.message);
                } else {
                    alert(error.message);
                }
            } finally {
                closeEditModal();
            }
        }

        // Sidebar toggle functionality
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const icon = document.getElementById('sidebar-toggle-icon');
            sidebar.classList.toggle('collapsed');
            
            const isCollapsed = sidebar.classList.contains('collapsed');
            localStorage.setItem('sidebarCollapsed', isCollapsed);
            icon.textContent = isCollapsed ? '‚ñ∂' : '‚óÄ';
        }

        // Initialize sidebar state
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const sidebarIcon = document.getElementById('sidebar-toggle-icon');
            const savedSidebarState = localStorage.getItem('sidebarCollapsed') === 'true';
            if (savedSidebarState) {
                sidebar.classList.add('collapsed');
                sidebarIcon.textContent = '‚ñ∂';
            }
        });

        // Expose to window for onclick handlers
        window.toggleSidebar = toggleSidebar;
        window.openEditModal = openEditModal;
        window.closeEditModal = closeEditModal;
        window.saveAccountChanges = saveAccountChanges;
    </script>

    <!-- Edit Account Modal -->
    <div class="modal-overlay" id="editModal">
        <div class="modal">
            <div class="modal-header">
                <div class="header-content">
                    <h2>Edit Account</h2>
                    <div class="account-name" id="edit-account-name"></div>
                </div>
                <button type="button" class="modal-close" onclick="closeEditModal()" aria-label="Close modal">√ó</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="edit-active">
                        <span class="label-text">Active</span>
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="edit-platform-admin">
                        <span class="label-text">Platform Admin (super admin)</span>
                    </label>
                    <div class="password-hint">Platform Admin can manage <span class="highlight">all accounts</span></div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions">
                    <button type="button" class="btn-secondary" onclick="closeEditModal()">Cancel</button>
                    <button type="button" class="btn-primary" onclick="saveAccountChanges()">Save</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('_survey-widget') %>
</body>
</html>

