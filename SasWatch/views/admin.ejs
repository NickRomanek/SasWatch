                                        <div class="activity-stat-label">Users</div>
                                    </div>
                                    <div class="activity-stat">
                                        <div class="activity-stat-number"><%= account.stats.usageEvents || 0 %></div>
                                        <div class="activity-stat-label">Usage Events</div>
                                    </div>
