<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accept Invitation - SasWatch</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: var(--bg-primary);
        }

        .invite-container {
            max-width: 450px;
            width: 90%;
            margin: 0 auto;
        }

        .invite-card {
            background: var(--bg-card);
            border-radius: 16px;
            padding: 40px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border-color);
        }

        .invite-logo {
            text-align: center;
            margin-bottom: 32px;
        }

        .invite-logo img {
            width: 64px;
            height: 64px;
        }

        .invite-logo h1 {
            margin: 16px 0 0 0;
            font-size: 1.5rem;
            color: var(--text-primary);
        }

        .invite-info {
            text-align: center;
            margin-bottom: 32px;
            padding: 20px;
            background: var(--bg-secondary);
            border-radius: 12px;
        }

        .invite-info h2 {
            margin: 0 0 8px 0;
            color: var(--text-primary);
            font-size: 1.25rem;
        }

        .invite-info p {
            margin: 0;
            color: var(--text-secondary);
        }

        .invite-info .account-name {
            color: var(--accent-primary);
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--text-primary);
        }

        .form-group input {
            width: 100%;
            padding: 14px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 1rem;
            background: var(--bg-secondary);
            color: var(--text-primary);
            box-sizing: border-box;
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--accent-primary);
            box-shadow: 0 0 0 3px rgba(77, 212, 162, 0.1);
        }

        .form-group input:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .password-hint {
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-top: 6px;
        }

        .btn-accept {
            width: 100%;
            background: var(--accent-primary);
            color: white;
            border: none;
            padding: 14px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            margin-top: 8px;
            transition: all 0.2s;
        }

        .btn-accept:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
        }

        .error-message {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid var(--danger);
            color: var(--danger);
            padding: 16px;
            border-radius: 8px;
            margin-bottom: 24px;
            text-align: center;
        }

        .login-link {
            text-align: center;
            margin-top: 24px;
            color: var(--text-secondary);
        }

        .login-link a {
            color: var(--accent-primary);
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="invite-container">
        <div class="invite-card">
            <div class="invite-logo">
                <img src="/images/logoTransp.png" alt="SasWatch">
                <h1>SasWatch</h1>
            </div>

            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
                <div class="login-link">
                    <a href="/login">Go to Login</a>
                </div>
            <% } else if (member) { %>
                <div class="invite-info">
                    <h2>Welcome!</h2>
                    <p>You've been invited to join <span class="account-name"><%= member.accountName %></span></p>
                </div>

                <form method="POST" action="/invite/accept">
                    <input type="hidden" name="token" value="<%= token %>">
                    
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" value="<%= member.email %>" disabled>
                    </div>
                    
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" name="name" value="<%= member.name || '' %>" placeholder="John Doe" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Create Password</label>
                        <input type="password" id="password" name="password" placeholder="••••••••" required minlength="8">
                        <div class="password-hint">Must be at least 8 characters</div>
                    </div>
                    
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="••••••••" required minlength="8">
                    </div>
                    
                    <button type="submit" class="btn-accept">Accept Invitation</button>
                </form>
            <% } else { %>
                <div class="error-message">
                    Invalid or expired invitation link
                </div>
                <div class="login-link">
                    <a href="/login">Go to Login</a>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/theme.js"></script>
    <script>
        // Client-side password validation
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                
                if (password !== confirmPassword) {
                    e.preventDefault();
                    alert('Passwords do not match');
                    return false;
                }
                
                if (password.length < 8) {
                    e.preventDefault();
                    alert('Password must be at least 8 characters');
                    return false;
                }
            });
        }
    </script>
</body>
</html>

