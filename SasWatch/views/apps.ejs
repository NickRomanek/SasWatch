<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <img src="/images/logoTransp.png" alt="SasWatch" class="logo-image" width="32" height="32">
                <span>SasWatch</span>
            </div>
            <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle sidebar">
                <span id="sidebar-toggle-icon">‚óÄ</span>
            </button>
        </div>

        <nav class="sidebar-nav">
            <div class="sidebar-nav-item">
                <a href="/" class="sidebar-nav-link" data-tooltip="Users">
                    <span class="nav-icon">üë•</span>
                    <span>Users</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/apps" class="sidebar-nav-link active" data-tooltip="Applications">
                    <span class="nav-icon">üì¶</span>
                    <span>Apps</span>
                    <span class="nav-beta-badge">Beta</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/dashboard" class="sidebar-nav-link" data-tooltip="Activity">
                    <span class="nav-icon">üìä</span>
                    <span>Activity</span>
                    <span class="nav-beta-badge">Beta</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/account" class="sidebar-nav-link" data-tooltip="Account">
                    <span class="nav-icon">‚öôÔ∏è</span>
                    <span>Account</span>
                </a>
            </div>
            <% if (typeof account !== 'undefined' && account && account.isSuperAdmin) { %>
            <div class="sidebar-nav-item">
                <a href="/dev" class="sidebar-nav-link" data-tooltip="Dev Tools">
                    <span class="nav-icon">üõ†Ô∏è</span>
                    <span>Dev</span>
                </a>
            </div>
            <% } %>
            <% if (typeof account !== 'undefined' && account && account.isSuperAdmin) { %>
            <div class="sidebar-nav-item">
                <a href="/admin" class="sidebar-nav-link" data-tooltip="Admin">
                    <span class="nav-icon">üëë</span>
                    <span>Admin</span>
                </a>
            </div>
            <% } %>
        </nav>

        <div class="sidebar-footer">
            <div class="sidebar-footer-actions">
                <a href="/logout" class="sidebar-footer-link">
                    <span class="nav-icon">üö™</span>
                    <span>Logout</span>
                </a>
                <button class="sidebar-footer-link" onclick="toggleTheme()" style="border: none; background: transparent; width: 100%; text-align: left; cursor: pointer;" title="Toggle theme">
                    <span class="nav-icon" id="theme-icon">‚òÄÔ∏è</span>
                    <span>Theme</span>
                </button>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Mobile Navigation -->
            <nav class="mobile-nav">
                <div class="mobile-nav-item">
                    <a href="/" class="mobile-nav-link">
                        <span>üë•</span>
                        <span>Users</span>
                    </a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/apps" class="mobile-nav-link active">
                        <span>üì¶</span>
                        <span>Apps</span>
                    </a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/dashboard" class="mobile-nav-link">
                        <span>üìä</span>
                        <span>Activity</span>
                    </a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/account" class="mobile-nav-link">
                        <span>‚öôÔ∏è</span>
                        <span>Account</span>
                    </a>
                </div>
                <% if (typeof account !== 'undefined' && account && account.isSuperAdmin) { %>
                <div class="mobile-nav-item">
                    <a href="/dev" class="mobile-nav-link">
                        <span>üõ†Ô∏è</span>
                        <span>Dev</span>
                    </a>
                </div>
                <% } %>
            </nav>

            <header>
                <div class="header-content">
                    <h1>
                        <span class="header-icon" aria-hidden="true">üì¶</span>
                        <span class="header-title-text">Applications</span>
                    </h1>
                </div>
            </header>

            <!-- Beta Notice Banner -->
            <div class="beta-notice-banner">
                <span class="beta-icon">üß™</span>
                <div class="beta-content">
                    <span class="beta-badge">Beta</span>
                    <strong>This feature is in beta.</strong> We're still testing and improving it. Found a bug or have feedback? We'd love to hear from you!
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-value">
                            <span id="total-apps"><%= stats.totalApps || 0 %></span>
                            <span class="stat-icon">üì¶</span>
                        </div>
                        <div class="stat-label">Total Applications</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-value">
                            <span id="total-unused"><%= stats.totalUnused || 0 %></span>
                            <span class="stat-icon">ü™ë</span>
                        </div>
                        <div class="stat-label">Unused Licenses</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-value">
                            <span id="total-licenses"><%= stats.totalLicenses || 0 %></span>
                            <span class="stat-icon">üé´</span>
                        </div>
                        <div class="stat-label">Total Licenses</div>
                    </div>
                </div>
            </div>

            <!-- Applications Table -->
            <section class="users-section" style="margin-top: 2rem;">
                <div class="users-header">
                    <div class="users-controls">
                        <input type="text" id="search-apps" class="search-box" placeholder="Search applications...">
                    </div>
                    <div class="users-header-right" style="display: flex; gap: 0.75rem; align-items: center;">
                        <button class="btn btn-secondary" onclick="openAddAppModal()" title="Add application manually">
                            ‚ûï Add
                        </button>
                        <button class="btn btn-primary" onclick="syncApplications(event)" title="Sync applications from recent activity">
                            üîÑ Sync
                        </button>
                        <button class="btn btn-danger" id="delete-all-apps-btn" onclick="deleteAllApplications(event)" title="Delete applications">
                            üóëÔ∏è Delete All
                        </button>
                    </div>
                    <div id="apps-bulk-actions" class="users-header-right" style="display: none; gap: 0.75rem; align-items: center;">
                        <span id="apps-selected-count" style="color: var(--text-secondary); font-size: 0.9rem;">0 selected</span>
                        <button class="btn btn-primary" onclick="openMergeAppsModal()" title="Merge selected applications">
                            üîÄ Merge Selected
                        </button>
                    </div>
                </div>

                <div class="table-container">
                    <table class="users-table apps-table" id="apps-table">
                        <thead>
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" id="apps-select-all" title="Select all applications">
                                </th>
                                <th>Application</th>
                                <th>Vendor</th>
                                <th>Active Users</th>
                                <th>Detected Users</th>
                                <th>License Utilization</th>
                            </tr>
                        </thead>
                        <tbody id="apps-table-body">
                            <% if (apps && apps.length > 0) { %>
                                <% apps.forEach(app => { %>
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="app-select-checkbox"
                                                data-app-id="<%= app.id || '' %>"
                                                data-app-source="<%= app.sourceKey || '' %>"
                                                data-app-name="<%= app.name %>"
                                                data-app-vendor="<%= app.vendor %>"
                                                data-app-detected="<%= app.detectedUsers || 0 %>"
                                                data-app-licenses="<%= app.licensesOwned || 0 %>"
                                                data-app-unused="<%= app.unusedLicenses || ((app.licensesOwned || 0) - (app.detectedUsers || 0)) %>">
                                        </td>
                                        <td>
                                            <a href="#" onclick="openAppDetailModal('<%= app.id || '' %>', '<%= app.sourceKey || '' %>', event)" 
                                               class="app-name-link" 
                                               style="color: var(--text-primary); text-decoration: none; font-weight: 500; cursor: pointer;"
                                               title="Click to view details">
                                                <%= app.name %>
                                            </a>
                                        </td>
                                        <td><%= app.vendor %></td>
                                        <td>
                                            <span class="active-users-badge"><%= app.activeUsers || 0 %></span>
                                            <span class="active-users-subtitle">last 30d</span>
                                        </td>
                                        <td><%= app.detectedUsers || 0 %></td>
                                        <td>
                                            <% 
                                                const licensesOwned = app.licensesOwned || 0;
                                                const detectedUsers = app.detectedUsers || 0;
                                                const utilizationPercent = app.utilizationPercent || (licensesOwned > 0 ? Math.round((detectedUsers / licensesOwned) * 100) : 0);
                                                const unusedLicenses = licensesOwned - detectedUsers;
                                                const hasLicenses = licensesOwned > 0;
                                            %>
                                            <div class="license-utilization-container">
                                                <% if (hasLicenses) { %>
                                                    <div class="license-utilization-bar-wrapper">
                                                        <div class="license-utilization-bar" 
                                                             style="width: <%= Math.min(utilizationPercent, 100) %>%"
                                                             data-percent="<%= utilizationPercent %>"
                                                             title="<%= detectedUsers %> / <%= licensesOwned %> licenses used (<%= utilizationPercent %>% utilization)">
                                                        </div>
                                                    </div>
                                                    <div class="license-utilization-text">
                                                        <span class="license-utilization-count"><%= detectedUsers %> / <%= licensesOwned %></span>
                                                        <span class="license-utilization-status <%= unusedLicenses < 0 ? 'status-over' : (unusedLicenses > 0 ? 'status-under' : 'status-balanced') %>">
                                                            <% if (unusedLicenses < 0) { %>
                                                                <span class="status-icon">‚ö†Ô∏è</span> <%= Math.abs(unusedLicenses) %> short
                                                            <% } else if (unusedLicenses > 0) { %>
                                                                <span class="status-icon">ü™ë</span> <%= unusedLicenses %> unused
                                                            <% } else { %>
                                                                <span class="status-icon">‚úÖ</span> Balanced
                                                            <% } %>
                                                        </span>
                                                    </div>
                                                <% } else { %>
                                                    <span class="license-utilization-no-license">No licenses configured</span>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                                        No applications detected yet. Activity will populate this view automatically.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <div class="sync-log-container">
                    <div class="sync-log-header" onclick="toggleAppsSyncLog()">
                        <div class="sync-log-title">Sync Log</div>
                        <span class="sync-log-toggle" id="apps-sync-log-toggle">‚ñº</span>
                    </div>
                    <div class="sync-log-content" id="apps-sync-log-content">
                        <pre id="apps-sync-log-output" class="sync-log-output">Ready to sync applications.</pre>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- App Detail Modal (Slide-Over Panel) -->
    <div class="modal" id="app-detail-modal" style="display: none;">
        <div class="modal-backdrop" onclick="closeAppDetailModal()"></div>
        <div class="modal-content app-detail-modal-large">
            <div class="modal-header">
                <div class="app-header-info">
                    <h2 id="app-detail-name">Application</h2>
                    <span class="status-badge" id="app-detail-vendor"></span>
                    <div class="app-stats" style="display: flex; gap: 1rem; margin-top: 0.5rem; flex-wrap: wrap;">
                        <span class="stat-badge">
                            <span class="stat-icon">üë•</span>
                            <span id="app-detail-users-count">0</span> users
                        </span>
                        <span class="stat-badge">
                            <span class="stat-icon">üé´</span>
                            <span id="app-detail-licenses-count">0</span> licenses
                        </span>
                        <span class="stat-badge" id="app-detail-license-status"></span>
                    </div>
                </div>
                <button class="modal-close" onclick="closeAppDetailModal()">√ó</button>
            </div>
            <div class="modal-body" style="padding: 0;">
                <!-- Tab Buttons -->
                <div class="tab-buttons" style="display: flex; border-bottom: 1px solid var(--border-color); background: var(--bg-secondary);">
                    <button class="tab-btn active" data-tab="users" onclick="switchAppDetailTab('users')">
                        üë• Users (<span id="users-tab-count">0</span>)
                    </button>
                    <button class="tab-btn" data-tab="settings" onclick="switchAppDetailTab('settings')">
                        ‚öôÔ∏è Settings
                    </button>
                </div>

                <!-- Users Tab -->
                <div id="app-detail-users-tab" class="tab-content active" style="padding: 1.5rem;">
                    <div class="users-table-container app-detail-users-table">
                        <table class="users-table" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Last Detected</th>
                                    <th>Device</th>
                                    <th>Licenses</th>
                                    <th>Source</th>
                                </tr>
                            </thead>
                            <tbody id="app-detail-users-table-body">
                                <tr>
                                    <td colspan="6" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                                        <div class="loading">Loading user data...</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Settings Tab -->
                <div id="app-detail-settings-tab" class="tab-content" style="padding: 1.5rem; display: none;">
                    <form id="app-detail-edit-form">
                        <input type="hidden" id="app-detail-id">
                        <input type="hidden" id="app-detail-source">
                        <div class="form-group">
                            <label for="app-detail-name-input">Application Name <span class="required">*</span></label>
                            <input type="text" id="app-detail-name-input" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="app-detail-vendor-input">Vendor <span class="required">*</span></label>
                            <input type="text" id="app-detail-vendor-input" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="app-detail-licenses-input">Total Licenses</label>
                            <input type="number" id="app-detail-licenses-input" class="form-input" min="0" step="1">
                        </div>
                        <div id="app-detail-detected-wrapper" style="margin-top: 1rem; background: var(--bg-secondary); padding: 1rem; border-radius: 10px; display: flex; gap: 0.5rem; align-items: center;">
                            <strong>Detected users:</strong> <span id="app-detail-detected">0</span>
                        </div>
                        <p id="app-detail-helper" style="margin-top: 0.75rem; color: var(--text-secondary); font-size: 0.9rem;"></p>
                        <div id="app-detail-components-wrapper" style="margin-top: 1rem; background: var(--bg-secondary); padding: 1rem; border-radius: 10px; display: none; flex-direction: column; gap: 0.75rem;">
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <strong>Linked sources</strong>
                                <span class="status-badge status-info" id="app-detail-components-count"></span>
                            </div>
                            <div id="app-detail-components-list" style="display: flex; flex-direction: column; gap: 0.5rem;"></div>
                        </div>
                        <div class="modal-footer" style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--border-color);">
                            <div class="modal-footer-left" id="app-detail-secondary-actions">
                                <button type="button" class="btn btn-secondary" id="app-detail-hide-button">Hide from list</button>
                                <button type="button" class="btn btn-danger" id="app-detail-delete-button">Delete application</button>
                            </div>
                            <div class="modal-footer-right">
                                <button type="button" class="btn btn-secondary" onclick="closeAppDetailModal()">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="app-merge-modal" style="display: none;">
        <div class="modal-content" style="max-width: 720px;">
            <div class="modal-header">
                <div>
                    <h2>Merge Applications</h2>
                    <span class="status-badge status-info">Bulk action</span>
                </div>
                <button class="modal-close" onclick="closeMergeAppsModal()">√ó</button>
            </div>
            <form id="merge-apps-form">
                <div class="modal-body" style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <div>
                        <label style="font-weight: 600;">Primary application</label>
                        <p style="margin: 0.25rem 0 0.75rem; color: var(--text-secondary); font-size: 0.9rem;">
                            Choose which application keeps activity. All other selected apps will merge into it.
                        </p>
                        <div id="merge-primary-list" style="background: var(--bg-secondary); padding: 0.75rem 1rem; border-radius: 8px; max-height: 180px; overflow-y: auto;"></div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label for="merge-app-name">Canonical Name <span class="required">*</span></label>
                            <input type="text" id="merge-app-name" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="merge-app-vendor">Vendor <span class="required">*</span></label>
                            <input type="text" id="merge-app-vendor" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="merge-app-licenses">Total Licenses</label>
                            <input type="number" id="merge-app-licenses" class="form-input" min="0" step="1" placeholder="Optional">
                        </div>
                    </div>

                    <div>
                        <h3 style="margin-bottom: 0.5rem;">Applications to merge</h3>
                        <div id="merge-selected-list" style="max-height: 220px; overflow-y: auto;"></div>
                    </div>

                    <div id="merge-summary" style="padding: 0.75rem 1rem; background: var(--bg-secondary); border-radius: 8px; color: var(--text-secondary); font-size: 0.9rem;"></div>
                </div>
                <div class="modal-footer">
                    <div class="modal-footer-right">
                        <button type="button" class="btn btn-secondary" onclick="closeMergeAppsModal()">Cancel</button>
                        <button type="submit" class="btn btn-primary">Merge Applications</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/theme.js"></script>
    <script src="/js/ui-components.js"></script>
    <script>
        window.initialAppsData = <%- JSON.stringify(apps || []) %>;
        window.initialAppStats = <%- JSON.stringify(stats || {}) %>;
    </script>
    <script src="/js/apps.js"></script>

    <%- include('_survey-widget') %>
</body>
</html>
