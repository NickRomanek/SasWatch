<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SasWatch</title>
    <meta name="description" content="Log in to SasWatch to track your SaaS license usage and optimize your subscriptions.">
    <meta name="keywords" content="SasWatch, SaaS tracker, license usage, Adobe tracker, Microsoft 365 tracker">
    
    <!-- Performance: Preconnect to Font domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body data-theme="dark">
    <div class="auth-container">
        <div class="auth-header">
            <img src="/images/logoTransp.png" alt="SasWatch Logo" class="auth-logo" width="80" height="80">
            <h1>SasWatch</h1>
            <p>Log in to your account</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <span>⚠️</span>
                <span><%= error %></span>
            </div>
            <% if (typeof showResendLink !== 'undefined' && showResendLink && typeof email !== 'undefined' && email) { %>
                <div style="text-align: center; margin-top: 16px;">
                    <button onclick="resendVerification()" id="resendBtn" style="background: var(--bg-hover); color: var(--text-primary); border: 1px solid var(--border-color); padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: 600; transition: all 0.2s;">
                        Resend Verification Email
                    </button>
                </div>
            <% } %>
        <% } %>

        <% if (typeof message !== 'undefined' && message) { %>
            <div class="success-message">
                <span>✓</span>
                <span><%= message %></span>
            </div>
        <% } %>
        
        <form method="POST" action="/login">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            
            <div style="text-align: right; margin-bottom: 16px;">
                <a href="/forgot-password" style="color: var(--accent-primary); text-decoration: none; font-size: 0.875rem; font-weight: 500;">Forgot Password?</a>
            </div>
            
            <button type="submit" class="btn-primary">Sign In</button>
        </form>
        
        <div class="auth-footer">
            Don't have an account? <a href="/signup">Sign up</a>
        </div>
    </div>

    <% if (typeof showResendLink !== 'undefined' && showResendLink && typeof email !== 'undefined' && email) { %>
    <script>
        async function resendVerification() {
            const btn = document.getElementById('resendBtn');
            const originalText = btn.textContent;
            
            btn.disabled = true;
            btn.textContent = 'Sending...';
            
            try {
                const response = await fetch('/resend-verification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        email: '<%= email %>'
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('✅ Verification email sent! Check your inbox.');
                } else {
                    alert('❌ ' + result.message);
                }
            } catch (error) {
                alert('❌ Failed to send email. Please try again.');
            } finally {
                btn.disabled = false;
                btn.textContent = originalText;
            }
        }
    </script>
    <% } %>
</body>
</html>

