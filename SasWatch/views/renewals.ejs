                </div>
            </div>

            <!-- Upload Zone (shown when no pending imports) -->
            <div class="upload-zone" id="main-upload-zone" onclick="document.getElementById('main-file-input').click()">
                <div class="upload-zone-icon">üìÑ</div>
                <div class="upload-zone-text">
                    <strong>Click to upload</strong> or drag & drop invoices
                </div>
                <div class="upload-zone-hint">
                    Forward documents to <strong>bills@saswatch.com</strong> or upload here ¬∑ PDF, PNG, JPG up to 30MB
                </div>
                <input type="file" id="main-file-input" accept=".pdf,.png,.jpg,.jpeg,.gif,.webp,.txt" multiple
                    onchange="handleFileUpload(this.files)">
                <div class="upload-progress" id="main-upload-progress">
                    <div class="upload-progress-bar">
                        <div class="upload-progress-fill"></div>
                    </div>
                    <div class="upload-status" id="main-upload-status">Processing...</div>
                </div>
            </div>

            <!-- Calendar View -->
            <div class="renewals-container calendar-view" id="calendar-view">
                <div class="upcoming-section">
                    <h3>üìå Upcoming Renewals</h3>
                    <div id="upcoming-list">
                        <div class="empty-state">
                            <div class="empty-state-icon">üìÖ</div>
                            <p>No upcoming renewals</p>
                            <p style="font-size: 0.85rem;">Add a subscription to get started</p>
                        </div>
                    </div>
                </div>
                <div class="calendar-section">
                    <div id="calendar"></div>
                </div>
            </div>

            <!-- Table View -->
            <div class="table-view" id="table-view">
                <section class="users-section">
                    <div class="table-container">
                        <table class="users-table" id="renewals-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Vendor</th>
                                    <th>Renewal Date</th>
                                    <th>Days Left</th>
                                    <th>Cost</th>
                                    <th>Billing</th>
                                    <th>Owner</th>
                                    <th style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="renewals-table-body">
                                <tr>
                                    <td colspan="8"
                                        style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                                        Loading...
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Add/Edit Subscription Modal -->
    <div class="modal renewal-modal" id="subscription-modal" style="display: none;">
        <div class="modal-backdrop" onclick="closeModal()"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modal-title">Add Subscription</h2>
                <button class="modal-close" onclick="closeModal()">√ó</button>
            </div>
            <div class="modal-body" style="padding: 1.5rem;">
                <form id="subscription-form" onsubmit="saveSubscription(event)">
                    <input type="hidden" id="subscription-id">

                    <div class="form-row">
                        <div class="form-group">
                            <label for="sub-name">Subscription Name *</label>
                            <input type="text" id="sub-name" required placeholder="e.g., Adobe Creative Cloud">
                        </div>
                        <div class="form-group">
                            <label for="sub-vendor">Vendor *</label>
                            <input type="text" id="sub-vendor" required placeholder="e.g., Adobe" list="vendor-list">
                            <datalist id="vendor-list">
                                <option value="Adobe">
                                <option value="Microsoft">
                                <option value="Google">
                                <option value="Salesforce">
                                <option value="Atlassian">
                                <option value="Slack">
                                <option value="Zoom">
                                <option value="AWS">
                                <option value="Other">
                            </datalist>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="sub-renewal-date">Renewal Date *</label>
                            <input type="date" id="sub-renewal-date" required>
                        </div>
                        <div class="form-group">
                            <label for="sub-cancel-by-date">Cancel By Date</label>
                            <input type="date" id="sub-cancel-by-date">
                            <p class="form-hint">Last day to cancel without penalty</p>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="sub-cost" id="sub-cost-label">Cost ($)</label>
                            <input type="number" id="sub-cost" min="0" step="0.01" placeholder="0.00">
                        </div>
                        <div class="form-group">
                            <label for="sub-billing-cycle">Billing Cycle</label>
                            <select id="sub-billing-cycle">
                                <option value="annual">Annual</option>
                                <option value="monthly">Monthly</option>
                                <option value="multi-year">Multi-Year</option>
                                <option value="one-time">One-Time</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="sub-seats">Number of Seats/Licenses</label>
                            <input type="number" id="sub-seats" min="0" step="1" placeholder="0">
                        </div>
                        <div class="form-group">
                            <label for="sub-account-number">Reference Number</label>
                            <input type="text" id="sub-account-number"
                                placeholder="Optional - account/contract/invoice number">
                            <p class="form-hint">For reference only</p>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="sub-owner">Owner</label>
                            <input type="text" id="sub-owner" placeholder="e.g., IT Department">
                        </div>
                        <div class="form-group">
                            <label for="sub-alert-email">Alert Email</label>
                            <input type="email" id="sub-alert-email" placeholder="Leave empty for account email">
                            <p class="form-hint">Where renewal reminders will be sent</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Alert Days Before Renewal</label>
                        <div class="alert-days-group">
                            <label class="alert-day-checkbox">
                                <input type="checkbox" name="alert-days" value="90"> 90 days
                            </label>
                            <label class="alert-day-checkbox">
                                <input type="checkbox" name="alert-days" value="60" checked> 60 days
                            </label>
                            <label class="alert-day-checkbox">
                                <input type="checkbox" name="alert-days" value="30" checked> 30 days
                            </label>
                            <label class="alert-day-checkbox">
                                <input type="checkbox" name="alert-days" value="14"> 14 days
                            </label>
                            <label class="alert-day-checkbox">
                                <input type="checkbox" name="alert-days" value="7" checked> 7 days
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="sub-notes">Notes</label>
                        <textarea id="sub-notes"
                            placeholder="Any additional notes about this subscription..."></textarea>
                    </div>

                    <div class="modal-footer"
                        style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--border-color); display: flex; justify-content: space-between;">
                        <div>
                            <button type="button" class="btn btn-danger" id="delete-btn" onclick="deleteSubscription()"
                                style="display: none;">
                                üóëÔ∏è Delete
                            </button>
                            <button type="button" class="btn btn-danger" id="reject-pending-btn"
                                onclick="rejectPending()" style="display: none;" data-pending-id="">
                                ‚úï Reject Import
                            </button>
                            <% if (process.env.NODE_ENV !=='production' ) { %>
                                <button type="button" class="btn btn-secondary" id="test-alert-btn"
                                    onclick="testAlert()" style="display: none;">
                                    üìß Test Alert
                                </button>
                                <% } %>
                        </div>
                        <div style="display: flex; gap: 0.75rem;">
                            <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js" defer></script>
    <script src="/js/theme.js" defer></script>
    <script src="/js/ui-components.js" defer></script>
    <script src="/js/renewals.js" defer></script>

    <%- include('_survey-widget') %>
</body>

</html>