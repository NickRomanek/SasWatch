<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <span>üìä</span>
                <span>Abowdy</span>
            </div>
            <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle sidebar">
                <span id="sidebar-toggle-icon">‚óÄ</span>
            </button>
        </div>

        <nav class="sidebar-nav">
            <div class="sidebar-nav-item">
                <a href="/" class="sidebar-nav-link" data-tooltip="Users">
                    <span class="nav-icon">üë•</span>
                    <span>Users</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/apps" class="sidebar-nav-link active" data-tooltip="Applications">
                    <span class="nav-icon">üì¶</span>
                    <span>Apps</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/dashboard" class="sidebar-nav-link" data-tooltip="Activity">
                    <span class="nav-icon">üìä</span>
                    <span>Activity</span>
                </a>
            </div>
            <div class="sidebar-nav-item">
                <a href="/account" class="sidebar-nav-link" data-tooltip="Account">
                    <span class="nav-icon">‚öôÔ∏è</span>
                    <span>Account</span>
                </a>
            </div>
        </nav>

        <div class="sidebar-footer">
            <div class="sidebar-footer-actions">
                <a href="/logout" class="sidebar-footer-link">
                    <span class="nav-icon">üö™</span>
                    <span>Logout</span>
                </a>
                <button class="sidebar-footer-link" onclick="toggleTheme()" style="border: none; background: transparent; width: 100%; text-align: left; cursor: pointer;" title="Toggle theme">
                    <span class="nav-icon" id="theme-icon">‚òÄÔ∏è</span>
                    <span>Theme</span>
                </button>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <header>
                <div class="header-content">
                    <h1>üì¶ Applications</h1>
                    <p class="subtitle">Automatically detected from activity data</p>
                </div>
            </header>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üì¶</div>
                    <div class="stat-content">
                        <div class="stat-value" id="total-apps"><%= stats.totalApps || 0 %></div>
                        <div class="stat-label">Total Applications</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">ü™ë</div>
                    <div class="stat-content">
                        <div class="stat-value" id="total-unused"><%= stats.totalUnused || 0 %></div>
                        <div class="stat-label">Unused Licenses</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">üé´</div>
                    <div class="stat-content">
                        <div class="stat-value" id="total-licenses"><%= stats.totalLicenses || 0 %></div>
                        <div class="stat-label">Total Licenses</div>
                    </div>
                </div>
            </div>

            <!-- Applications Table -->
            <section class="users-section" style="margin-top: 2rem;">
                <div class="users-header">
                    <div class="users-controls">
                        <input type="text" id="search-apps" class="search-box" placeholder="Search applications...">
                    </div>
                </div>

                <div class="table-container">
                    <table class="users-table apps-table" id="apps-table">
                        <thead>
                            <tr>
                                <th>Application</th>
                                <th>Vendor</th>
                                <th>Detected Users</th>
                                <th>Licenses Owned</th>
                                <th>Unused Licenses</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="apps-table-body">
                            <% if (apps && apps.length > 0) { %>
                                <% apps.forEach(app => { 
                                    const diff = typeof app.unusedLicenses === 'number'
                                        ? app.unusedLicenses
                                        : ((app.licensesOwned || 0) - (app.detectedUsers || 0));
                                    const diffIcon = diff > 0 ? 'ü™ë' : (diff < 0 ? '‚ö†Ô∏è' : '‚úÖ');
                                    const diffClass = diff > 0
                                        ? 'status-badge status-success'
                                        : (diff < 0 ? 'status-badge status-danger' : 'status-badge status-neutral');
                                    const diffLabel = diff > 0
                                        ? `${diff} unused`
                                        : (diff < 0 ? `${Math.abs(diff)} short` : 'Balanced');
                                %>
                                    <tr>
                                        <td><%= app.name %></td>
                                        <td><%= app.vendor %></td>
                                        <td><%= app.detectedUsers || 0 %></td>
                                        <td><%= app.licensesOwned || 0 %></td>
                                        <td>
                                            <span class="<%= diffClass %>">
                                                <span><%= diffIcon %></span>
                                                <span><%= diffLabel %></span>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-icon" onclick="openAppEditModal('<%= app.id || '' %>', '<%= app.sourceKey || '' %>')" title="Edit application">
                                                ‚úèÔ∏è
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                                        No applications detected yet. Activity will populate this view automatically.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </main>

    <!-- Edit Application Modal -->
    <div class="modal" id="app-edit-modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <h2 id="app-edit-title">Edit Application</h2>
                    <span class="status-badge" id="app-edit-context"></span>
                </div>
                <button class="modal-close" onclick="closeAppEditModal()">√ó</button>
            </div>
            <form id="edit-app-form">
                <input type="hidden" id="edit-app-id">
                <input type="hidden" id="edit-app-source">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="edit-app-name">Application Name <span class="required">*</span></label>
                        <input type="text" id="edit-app-name" class="form-input" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-app-vendor">Vendor <span class="required">*</span></label>
                        <input type="text" id="edit-app-vendor" class="form-input" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-app-licenses">Total Licenses</label>
                        <input type="number" id="edit-app-licenses" class="form-input" min="0" step="1">
                    </div>
                    <div id="edit-app-detected-wrapper" style="margin-top: 1rem; background: var(--bg-secondary); padding: 1rem; border-radius: 10px; display: flex; gap: 0.5rem; align-items: center;">
                        <strong>Detected users:</strong> <span id="edit-app-detected">0</span>
                    </div>
                    <p id="edit-app-helper" style="margin-top: 0.75rem; color: var(--text-secondary); font-size: 0.9rem;"></p>
                </div>
                <div class="modal-footer">
                    <div class="modal-footer-left" id="app-edit-secondary-actions">
                        <button type="button" class="btn btn-secondary" id="hide-app-button">Hide from list</button>
                        <button type="button" class="btn btn-danger" id="delete-app-button">Delete application</button>
                    </div>
                    <div class="modal-footer-right">
                        <button type="button" class="btn btn-secondary" onclick="closeAppEditModal()">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/theme.js"></script>
    <script src="/js/apps.js"></script>
</body>
</html>
